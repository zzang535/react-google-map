{
  "compilerOptions": {
    "target": "es5", // 컴파일된 js 코드가 ES5 (구버전) 과 호환되도록
    "lib": ["dom", "dom.iterable", "esnext"], // ts 가 사용할 라이브러리 지정
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true, // json 파일을 모듈처럼 import 할 수 있게 허용
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist" // 컴파일된 파일들을 dist 경로에 출력
  },
  "include": ["./src/lib/**/*.tsx", "./src/lib/**/*.ts"]
}
